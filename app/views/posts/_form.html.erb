<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="large-9 medium-9 column">
    <div class="form-inputs row">
      <%= f.input :title, wrapper_html: { class: "large-6 medium-6 column" } %>
      <%= f.input :body, wrapper_html: { class: "large-12 medium-12 column" } %>
      <%= f.input :summary, wrapper_html: { class: "large-12 medium-12 column" } %>
      <div id="uploads">
        <%= f.simple_fields_for :images do |nf| %>
          <%= render 'image_fields', :f => nf %>
        <% end %>
      </div>
    </div>
    <div class="row" id="add-more">
      <div class="large-12 medium-12 column">
        <%= link_to_add_association "add image", f, :images,  data: {
          'association-insertion-node' => '#uploads',
          'association-insertion-method' => 'append'
        }, class: "button tiny radius secondary"
      %>
    </div>
    </div>
  </div>
  <div class="large-3 medium-3 column">
    <h5>Tags</h5>
    <div class="field">
      <%= f.text_field :tag_list %>
    </div>
  </div>

  <div class="large-12 medium-12 column">
    <div class="form-actions">
      <%= f.input :published %>
      <%= f.button :submit, class: "radius" %>
    </div>
  </div>
  </div>
<% end %>
