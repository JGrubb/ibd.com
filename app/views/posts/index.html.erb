<div class="row">
  <% @posts.each do |post| %>
    <div class="post large-8 large-centered medium-12 column">
      <h2><%= link_to post.title, post_date_path_helper(post) %></h2>
      <time><%= post.created_at.strftime('%D') %></time>
      <div><%= simple_format(post.summary) %></div>
    </div>
  <% end %>
</div>

