<div id="archive" class="row">
  <h2 class="large-12 column">All blog posts</h2>
  <% cache [ @posts_by_year.first.last ] do %>
    <% @posts_by_year.each do |year| %>
      <% cache [ year[0], year[1].size ] do %>
        <h3 id="<%= year[0] %>"><%= year[0] %></h3>
        <% year[1].each do |post| %>
          <% cache [ post ] do %>
          <div class="post">
            <h4><%= link_to post.title, post_date_path_helper(post) %><small> - <%= post.created_at.strftime('%D') %></small></h4>
          </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
