<div id="portfolio-item">
  <h2 id="title"><%= @portfolio_item.title %></h2>


  <div id="body"><%= markdown_filter @portfolio_item.body %></div>

  <div id="images">
    <% @images.each do |image| %>
      <div class="image"><%= link_to image_tag(image.image_url(:medium_landscape)), image.image_url %></div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="links large-12 column">
      <%= link_to 'Edit', edit_portfolio_item_path(@portfolio_item), class: "tiny radius button" %>
    </div>
  <% end %>
</div>
