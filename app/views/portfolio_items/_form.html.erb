<%= simple_form_for(@portfolio_item, multipart: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :summary %>
    <div class="large-12 column">
      <%= image_tag f.object.featured_image_url(:thumb) %>
      <%= f.input :featured_image %>
    </div>
    <div id="uploads">
      <h3>#show images</h3>
      <%= f.simple_fields_for :images do |nf| %>
        <%= render 'image_fields', :f => nf %>
      <% end %>
    </div>
  </div>
  <div id="add-more">
    <%= link_to_add_association "add image", f, :images,  data: {
      'association-insertion-node' => '#uploads',
      'association-insertion-method' => 'append'
    }, class: "button tiny radius secondary"
  %>
</div>

  <div class="form-actions">
    <%= f.button :submit, class: "small radius" %>
  </div>
<% end %>
